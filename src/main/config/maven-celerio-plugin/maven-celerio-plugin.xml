    <entityConfigs>

        <!-- Account demonstrates misc column configurations -->

        <entityConfig tableName="utilisateur" >

            <columnConfigs>

                <columnConfig
                    columnName="login"
                    fieldName="username"
                    min="4"
                    searchResult="true" />

                <columnConfig
                    columnName="email"
                    searchResult="true" />

                <columnConfig
                    columnName="actif"
                    searchResult="true" />
            </columnConfigs>
        </entityConfig>

        <!-- Role demonstrates many-to-many relation and spring-security integration -->

        <entityConfig tableName="role" >

            <columnConfigs>

                <columnConfig
                    columnName="role_name"
                    messageKey="true" />
            </columnConfigs>
        </entityConfig>

        <entityConfig
            associationDirection="UNIDIRECTIONAL"
            tableName="utilisateur_role" >

            <columnConfigs>

                <columnConfig
                    columnName="role_id"
                    inverse="true" />
            </columnConfigs>
        </entityConfig>
    </entityConfigs>

