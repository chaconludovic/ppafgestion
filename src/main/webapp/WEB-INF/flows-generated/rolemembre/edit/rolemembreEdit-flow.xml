<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />

	<!-- Flow input parameters -->
	<!-- rolemembre: the entity to edit. If null, then we create it here -->
	<input name="rolemembre" required="false" value="flowScope.rolemembre"/>	
	<on-start>
		<evaluate expression="rolemembreController.newIfNull(rolemembre)" result="flowScope.rolemembre" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="rolemembreSubEdit" else="rolemembreEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="rolemembreEdit">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,rolemembre.id,rolemembreConverter.print(rolemembre))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="rolemembreController.save(rolemembre)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="rolemembreController.saveAndClose(rolemembre)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,rolemembre)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="rolemembreController.delete(rolemembre)" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="rolemembreSubEdit" view="rolemembreEdit.xhtml">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>

	<end-state id="endEdit">
		<output name="rolemembre" value="rolemembre" />
	</end-state>
</flow>